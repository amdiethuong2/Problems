#include<cstdio>
#include<algorithm>
#include<vector>
using namespace std;
typedef pair<int,int> ii;
typedef pair<int,ii> ip;
int main()
{
    //freopen("test.inp","r",stdin);
    int n,m,s,e,f,dp[1000005]={0},i,j,r;
    vector<ip> v;
    scanf("%d%d%d",&n,&m,&r);
    while(m--)
    {
        scanf("%d%d%d",&s,&e,&f);
        v.push_back(ip(e,ii(f,s)));
    }
    sort(v.begin(),v.end());
    j=0;
    for(i=1;i<=n;++i)
    {
        dp[i]=dp[i-1];
        while(j<v.size() && v[j].first==i)
        {
            dp[i]=max(dp[i],dp[max(v[j].second.second-r,0)]+v[j].second.first);
            ++j;
        }
    }
    printf("%d",dp[n]);
}
