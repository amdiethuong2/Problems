#include<cstdio>
#include<cassert>
#include<algorithm>
#include<vector>
#include<cmath>
#include<iostream>
#include<cstring>
#define f(i,n) for(int i=1;i<=n;i++)
#define ff(i,a,b) for(int i=a;i<=b;i++)
#define F(i,n) for (int i=n;i>=1;i--)
#define FF(i,a,b) for(int i=a;i>=b;i--)
#define fi first
#define se second
#define B 1
#define W -1
#define pb push_back
using namespace std;
typedef long long ll;
typedef pair<ll,ll> ii;
typedef vector<ii> vii;
typedef vector<double> vi;
const int MAX=1e5+5; const ll mod=1e9+7;
const int INF=99999;

int n,a[30005],f[30005][4]={0},ff[30005][4]={0};
int opt1(void)
{
    f[1][1]=(a[1]!=1);f[1][2]=(a[1]!=2);f[1][3]=(a[1]!=3);
    ff(i,2,n)
    {
        f[i][1]=f[i-1][1]+(a[i]!=1);
        f[i][2]=min(f[i-1][2],f[i-1][1])+(a[i]!=2);
        f[i][3]=min(min(f[i-1][1],f[i-1][2]),f[i-1][3])+(a[i]!=3);
    }
    return min(min(f[n][1],f[n][2]),f[n][3]);
}
int opt2(void)
{
    ff[n][1]=(a[n]!=1);ff[n][2]=(a[n]!=2);ff[n][3]=(a[n]!=3);
    F(i,n-1)
    {
        ff[i][1]=ff[i+1][1]+(a[i]!=1);
        ff[i][2]=min(ff[i+1][2],ff[i+1][1])+(a[i]!=2);
        ff[i][3]=min(min(ff[i+1][1],ff[i+1][2]),ff[i+1][3])+(a[i]!=3);
    }
    return min(min(ff[1][1],ff[1][2]),ff[1][3]);
}
int main(void)
{
    scanf("%d",&n);
    f(i,n) scanf("%d",&a[i]);
    printf("%d",min(opt1(),opt2()));
}
