#include <cstdio>
#include <algorithm>
#include <cstdlib>

using namespace std;

int n, type, a[30005];
int sign[30005][3];
int re[30005][3];

int f(int i, int j){
    if(i==n+1) return 0;
    if(sign[i][j]==type) return re[i][j];
    re[i][j]= 1000000000;
    if(type==0){
        for(int k=j;k<=2;k++) re[i][j]= min(re[i][j], f(i+1,k)+ (a[i]!=k));
    }
    else{
        for(int k=j;k>=0;k--) re[i][j]= min(re[i][j], f(i+1,k)+ (a[i]!=k));
    }
    sign[i][j]= type; return re[i][j];
}

int main(){
    int res= 1000000000;
    scanf("%d", &n);
    for(int i=1;i<=n;i++){
        scanf("%d", &a[i]); a[i]--;
    }
    for(type=1;type<=2;type++){
        if(type==0) res= min(res, f(1,0));
        else res= min(res, f(1,2));
    }
    printf("%d\n", res);
    return 0;

}
